# Application
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000
LOG_LEVEL=info

# Database (PostgreSQL)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DB?schema=public
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/minara?schema=public

# Redis (Cache/Queues)
REDIS_URL=redis://localhost:6379

# JWT / Auth
JWT_ACCESS_SECRET=change-me-access
JWT_REFRESH_SECRET=change-me-refresh
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d

# Stripe (Billing)
STRIPE_SECRET_KEY=sk_test_change_me
STRIPE_WEBHOOK_SECRET=whsec_change_me

# Email (choose SMTP or Resend)
MAIL_FROM=Minara <no-reply@example.com>
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
RESEND_API_KEY=

# Storage (S3-compatible)
STORAGE_PROVIDER=s3
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_REGION=us-east-1
STORAGE_BUCKET=minara-dev
STORAGE_ACCESS_KEY_ID=change-me
STORAGE_SECRET_ACCESS_KEY=change-me

# Admin Panel
ADMINJS_COOKIE_SECRET=change-me-admin-cookie

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=60

# Swagger
SWAGGER_ENABLED=true

